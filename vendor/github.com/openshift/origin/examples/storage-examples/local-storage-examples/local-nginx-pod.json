{
    "apiVersion": "v1",
    "id": "local-nginx",
    "kind": "Pod",
    "metadata": {
        "name": "local-nginx"
    },
    "spec": {
        "containers": [
            {
                "name": "local-nginx",
                "image": "fedora/nginx",
                "volumeMounts": [
                    {
                        "mountPath": "/usr/share/nginx/html/test",
                        "name": "localvol"
                    }
                ]
            }
        ],
        "volumes": [
            {
                "name": "localvol",
                "hostPath": {
                    "path": "/opt/data"
                }
            }
        ]
    }
}

