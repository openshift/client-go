{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
    "name": "gluster-default-volume"
  },
  "spec": {
    "capacity": {
        "storage": "2Gi"
        },
    "accessModes": [ "ReadWriteMany" ],
    "glusterfs": {
        "endpoints": "glusterfs-cluster",
        "path": "myVol1",
        "readOnly": false
    },
    "persistentVolumeReclaimPolicy": "Recycle"
  }
}

