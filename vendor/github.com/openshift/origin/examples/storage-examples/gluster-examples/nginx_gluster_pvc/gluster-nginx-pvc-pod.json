{
    "apiVersion": "v1",
    "id": "glusterfs-nginx-pvc",
    "kind": "Pod",
    "metadata": {
        "name": "glusterfs-nginx-pvc"
    },
    "spec": {
        "containers": [
            {
                "name": "glusterfs-nginx-pvc",
                "image": "fedora/nginx",
                "volumeMounts": [
                    {
                        "mountPath": "/usr/share/nginx/html/test",
                        "name": "nginxglustervolpvc"
                    }
                ],
                "securityContext": {
                    "capabilities": {},
                    "privileged": true
                }
            }
        ],
        "volumes": [
            {
                "name": "nginxglustervolpvc",
                "persistentVolumeClaim": {
                    "claimName": "claim-default"
                }                
            }
        ]
    }
}

